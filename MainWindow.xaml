<Window x:Class="Feladat_pizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Feladat_pizza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,0,626,217">
            <ListBox x:Name="lb_pizzateszta" SelectionMode="Single" Margin="10,0,0,0" FontSize="16" SelectionChanged="lb_pizzateszta_SelectionChanged">
                <ListBoxItem Content="Vékony"/>
                <ListBoxItem Content="Normál"/>
                <ListBoxItem Content="Extra vastag"/>
            </ListBox>
        </StackPanel>
        <StackPanel Margin="179,0,447,217">
            <ComboBox x:Name="combobox_meret" Width="120" SelectionChanged="combobox_meret_SelectionChanged">
                <ComboBoxItem Content="Kicsi"/>
                <ComboBoxItem Content="Közepes"/>
                <ComboBoxItem Content="Nagy"/>
            </ComboBox>

        </StackPanel>
        

    </Grid>
</Window>
